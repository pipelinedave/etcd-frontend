{
    "compilerOptions": {
      "target": "es6",
      "module": "es6",
      "jsx": "react",
      "esModuleInterop": true,
      "sourceMap": true,
      "outDir": "dist",
      "noImplicitAny": true,
      "strict": true,
      "allowJs": false,
      "moduleResolution": "node",
      "resolveJsonModule": true,
      "baseUrl": "./src",
      "paths": {
        "*": ["*", "src/*"]
      }
    },
    "include": [
      "src/**/*.tsx",
      "src/**/*.ts",
      "./components/**/*"
    ],
    "exclude": ["node_modules"]
  }
  